<div class="col-7">
    <div class="mb-3">
        <div class="mb-5">
            <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
                <%= image_tag "back.png", size: "28x28", class: "me-4" %>
                <span style="position:relative; top: 2px;"><%= @user.username %></span>
                <span class="text-muted fs-6" style="position:relative; top: 2px;"><%= pluralize(@user.tweets.size, "Tweet") %></span>
            <% end %>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <% if @user.avatar.present? %>
                    <%= image_tag @user.avatar, class: "rounded-circle", size: "150x150" %>
                <% else %>
                    <%= image_tag "user.png", class: "rounded-circle", size: "150x150" %>
                <% end %>
            </div>

            <% if controller_name == 'profiles' %>
                <div><%= button_tag 'Edit profile', class: "btn btn-outline-secondary rounded-pill w-100", data: { "bs-toggle": "modal", "bs-target": "#profileEditModal" } %></div>
            <% else %>
                <%= render 'users/follow_button', user: @user, current_user: current_user %>
            <% end %>
        </div>

        <%= render "users/profile_section", user: @user, current_user: current_user %>

        <div id="tweets">
            <%= render partial: "tweets/tweet", collection: @tweet_presenters, as: :tweet_presenter %>
        </div>
        
    </div>
</div>

<div class="col">
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>

<% if controller_name == "profiles" %>
    <!-- Modal -->
    <div class="modal" id="profileEditModal" tabindex="-1" aria-labelledby="profileEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header border-bottom-0">
            <button type="button" class="btn-close mx-0 close-modal-btn" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <%= form_with model: current_user, url: profile_path, data: { controller: 'tweet-form' }, class: "row g-3", locals: true, method: :put do |f| %>
                <form class="row g-3">
                    <div class="col-md-12">
                        <%= f.label :username, class: "form-label" %>
                        <%= f.text_field :username, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :display_name, class: "form-label" %>
                        <%= f.text_field :display_name, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :avatar, class: "form-label" %>
                        <%= f.file_field :avatar, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :email, class: "form-label" %>
                        <%= f.email_field :email, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :bio, class: "form-label" %>
                        <%= f.text_area :bio, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :location, class: "form-label" %>
                        <%= f.text_field :location, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= f.label :profile_url, "URL", class: "form-label" %>
                        <%= f.text_field :profile_url, class: "form-control" %>
                    </div>

                    <div class="col-md-12">
                        <%= f.submit "Update profile", class: "btn btn-twitter rounded-pill" %>
                    </div>
                </form>      
            <% end %>  
        </div>
        </div>
    </div>
    </div>
<% end %>
