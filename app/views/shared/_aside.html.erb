<aside class="col side-navbar">

    <%= link_to dashboard_path, class: "d-flex align-items-center fs-5 px-3 mb-2" do %>
        <div class="px-2 py-2 rounded-circle">
            <%= image_tag 'twitter.png', width: "32" %>
        </div>
    <% end %>

    <%= link_to dashboard_path, class: "d-flex align-items-center fs-5 mb-2 #{nav_link_active?('dashboard')}" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'home.png', width: "32" %></span>
            Home
        </div>
    <% end %>

    <%= link_to hashtags_path, class: "d-flex align-items-center fs-5 mb-2 #{nav_link_active?('hashtags')}" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'hashtag.png', width: "32" %></span>
            Explore
        </div>
    <% end %>

    <%= link_to notifications_path, class: "#{ nav_link_active?('notifications') } d-flex align-items-center fs-5 mb-2" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'notification.png', width: "32" %></span>
            Notifications
        </div>
    <% end %>

    <%= link_to message_threads_path, class: "d-flex align-items-center fs-5 mb-2 #{nav_link_active?('message_threads')}" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'messages.png', width: "32" %></span>
            Messages
        </div>
    <% end %>

    <%= link_to bookmarks_path, class: "d-flex align-items-center fs-5 mb-2 #{nav_link_active?('bookmarks')}" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'bookmark-aside.png', width: "32" %></span>
            Bookmark
        </div>
    <% end %>

    <%= link_to profile_path, class: "d-flex align-items-center fs-5 mb-2 #{nav_link_active?('profiles')}" do %>
        <div class="px-4 py-2 rounded-pill">
            <span class="me-4 position-relative" style="bottom: 3px"><%= image_tag 'user.png', width: "32" %></span>
            Profile
        </div>
    <% end %>
    
    <div class="d-flex align-items-center fs-5 mb-2 py-3  px-4">
        <%= button_tag "Tweet", class: "btn btn-twitter btn-lg rounded-pill w-100", data: { "bs-toggle": "modal", "bs-target": "#tweetModal" } %>
    </div>

    <%= link_to "Sign out", destroy_user_session_path, class: "twitter-link", data: { turbo_method: :delete } %>
</aside>

<!-- Modal -->
<div class="modal" id="tweetModal" tabindex="-1" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="btn-close mx-0 close-modal-btn" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'shared/tweet_form', form_submit_path: tweets_path, button_label: "Tweet" %>
      </div>
    </div>
  </div>
</div>