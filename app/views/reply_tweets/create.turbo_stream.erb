<%= turbo_stream.prepend "reply_tweets" do %>
    <%= render partial: "tweets/tweet", locals: { tweet_presenter: TweetPresenter.new(tweet: @reply_tweet.reload, current_user: current_user.reload) } %>
<% end %>

<%= turbo_stream.replace "tweet_stats" do %>
    <%= render partial: "tweets/show_stats", locals: { tweet_presenter: TweetPresenter.new(tweet: @tweet.parent_tweet.reload, current_user: current_user.reload) } %>
<% end %>
