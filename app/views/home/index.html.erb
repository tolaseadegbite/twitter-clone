<% if user_signed_in? %>
    <h1>We are logged-in</h1>
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
    
    <%= form_with model: Tweet.new, local: true do |form| %>
        <%= form.text_field :body %>
        <%= form.submit "create tweet" %>
    <% end %>

    <ul>
        <% Tweet.find_each do |tweet| %>
            <li><%= tweet.body %></li>
        <% end %>
    </ul>
<% else %>
    <h1>Hello, world!</h1>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-twitter rounded-pill" %>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn-twitter rounded-pill" %>
<% end %>