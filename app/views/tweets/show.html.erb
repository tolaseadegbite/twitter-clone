<div class="col-7">
    <div class="mb-3">
        <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
            <%= image_tag "back.png", size: "28x28", class: "me-4" %>
            <span style="position:relative; top: 2px;">Tweet</span>
        <% end %>

        <%= turbo_frame_tag dom_id(@tweet_presenter.tweet) do %>

            <div data-controller="tweet-card" data-tweet-path="<%= tweet_path(@tweet_presenter.tweet) %>" class="tweet py-3 px-3 d-flex">
                <div class="flex-shrink-0">
                    <%= image_tag @tweet_presenter.avatar, size: "46x50", class: "rounded-circle" %>
                </div>
                <div class="flex-grow-1 ms-3">
                    <p class="fw-bolder mb-0"><%= @tweet_presenter.display_name %></p>
                    <p class="text-muted mb-1">@<%= @tweet_presenter.username %></p>
                    <p class="fs-2 mb-1"><%= @tweet_presenter.body %></p>
                    <p class="text-muted"><%= @tweet_presenter.tweet.created_at.strftime("%l:%M %p") %> Â· <%= @tweet_presenter.tweet.created_at.strftime("%b %d, %Y") %></p>

                    <div class="d-flex justify-content-start">
                        <div class="me-4">Views</div>
                        <div class="me-4"><span class="fw-bold"><%= @tweet_presenter.retweets_count %></span> Retweets</div>
                        <div class="me-4"><span class="fw-bold"><%= @tweet_presenter.likes_count %></span> Likes</div>
                    </div>

                    <div class="d-flex justify-content-evenly align-items-center action-links">
                        <div>
                            <%= link_to "#", data: { "ignore-click":true }, class: "text-decoration-none text-black views" do %>
                                <%= image_tag "bar-graph.png", size: "24x24", class: "me-1" %>
                                
                            <% end %>
                        </div>
                        <div>
                            <%= link_to tweet_path(@tweet_presenter.tweet), data: { "ignore-click":true }, class: "text-decoration-none text-black replies" do %>
                                <%= image_tag "speech-bubble.png", size: "24x24", class: "me-1" %>
                                
                            <% end %>
                        </div>
                        <div>
                            <%= link_to @tweet_presenter.retweet_tweet_url, data: { "ignore-click":true, "turbo-method": @tweet_presenter.turbo_retweet_data_method }, class: "text-decoration-none text-black retweets" do %>
                                <%= image_tag @tweet_presenter.retweet_image, size: "24x24", class: "me-1" %>
                            <% end %>
                        </div>
                        <div>
                            <%= link_to @tweet_presenter.like_tweet_url, data: { "ignore-click":true, "turbo-method": @tweet_presenter.turbo_like_data_method }, class: "text-decoration-none text-black likes" do %>
                                <%= image_tag @tweet_presenter.like_image, size: "24x24", class: "me-1" %>
                            <% end %>
                        </div>
                        <div>
                            <%= link_to @tweet_presenter.bookmark_tweet_url, data: { "ignore-click":true, "turbo-method": @tweet_presenter.turbo_bookmark_data_method }, class: "text-decoration-none text-black bookmarks" do %>
                                <%= image_tag @tweet_presenter.bookmark_image, size: "24x24", class: "me-1" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>

    </div>
</div>

<div class="col">
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>
