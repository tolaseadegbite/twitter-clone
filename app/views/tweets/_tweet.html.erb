<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>

    <div class="tweet py-3 px-3 d-flex">
        <div class="flex-shrink-0">
            <%= image_tag tweet_presenter.avatar, size: "46x50", class: "rounded-circle" %>
        </div>
        <div class="flex-grow-1 ms-3">
            <p class="mb-0"><span class="fw-bolder"><%= tweet_presenter.display_name %> </span> <span class="text-muted">@<%= tweet_presenter.username %></span> Â· <%= tweet_presenter.created_at %></p>
            <p><%= tweet_presenter.body %></p>

            <div class="d-flex justify-content-between align-items-center action-links">
                <div>
                    <%= link_to "#", class: "text-decoration-none text-black views" do %>
                        <%= image_tag "bar-graph.png", size: "20x20", class: "me-1" %>
                        <span>Views</span>
                    <% end %>
                </div>
                <div>
                    <%= link_to "#", class: "text-decoration-none text-black replies" do %>
                        <%= image_tag "speech-bubble.png", size: "20x20", class: "me-1" %>
                        <span>Replies</span>
                    <% end %>
                </div>
                <div>
                    <%= link_to tweet_presenter.retweet_tweet_url, data: { "turbo-method": tweet_presenter.turbo_retweet_data_method }, class: "text-decoration-none text-black retweets" do %>
                        <%= image_tag tweet_presenter.retweet_image, size: "20x20", class: "me-1" %>
                        <span><%= tweet_presenter.retweets_count %></span>
                    <% end %>
                </div>
                <div>
                    <%= link_to tweet_presenter.like_tweet_url, data: { "turbo-method": tweet_presenter.turbo_like_data_method }, class: "text-decoration-none text-black likes" do %>
                        <%= image_tag tweet_presenter.like_image, size: "20x20", class: "me-1" %>
                        <span><%= tweet_presenter.likes_count %></span>
                    <% end %>
                </div>
                <div>
                    <%= link_to tweet_presenter.bookmark_tweet_url, data: { "turbo-method": tweet_presenter.turbo_bookmark_data_method }, class: "text-decoration-none text-black bookmarks" do %>
                        <%= image_tag tweet_presenter.bookmark_image, size: "20x20", class: "me-1" %>
                        <span><%= tweet_presenter.bookmark_text %></span>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
