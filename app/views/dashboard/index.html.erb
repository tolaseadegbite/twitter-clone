<div class="col-7">
    <div class="mb-3">
        <%= link_to "Home", dashboard_path, class: "fs-4 text-decoration-none text-black fw-semibold" %>
    </div>
    <%= form_with model: Tweet.new, local: true do |form| %>
        <%= form.text_area :body, placeholder: "What's happening?", class: "w-100 form-control tweet-input mb-4" %>

        <div class="d-flex justify-content-end">
            <%= form.submit "Tweet", class: "btn btn-twitter rounded-pill" %>
        </div>
    <% end %>

    <% Tweet.find_each do |tweet| %>
        <%= tweet.body %>
    <% end %>
</div>

<div class="col">
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>