<div class="col-7">
    <div class="mb-3">
        <div class="mb-5">
            <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
                <%= image_tag "back.png", size: "28x28", class: "me-4" %>
                <span style="position:relative; top: 2px;"><%= current_user.username %></span>
                <span class="text-muted fs-6" style="position:relative; top: 2px;"><%= pluralize(current_user.tweets.size, "Tweet") %></span>
            <% end %>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <% if current_user.avatar.present? %>
                    <%= image_tag current_user.avatar, class: "rounded-circle", size: "150x150" %>
                <% else %>
                    <%= image_tag "user.png", class: "rounded-circle", size: "150x150" %>
                <% end %>
            </div>
            <div>
                <%= link_to 'Edit profile',"/", class: "btn btn-twitter-outline rounded-pill" %>
            </div>
        </div>

        <div>
            <p class="fs-3 fw-semibold mb-0"><%= current_user.display_name %></p>
            <p class="fs-3 fw-semibold mb-0"><%= current_user.username %></p>
            <p>Bio</p>
            <div class="d-flex justify-content-start mb-2">
                <div class="me-4">
                    <%= image_tag "location.png", size: "23x23", class: "me-1" %>
                    <span class="text-muted">Location</span>
                </div>
                <div class="me-4">
                    <%= image_tag "url.png", size: "23x23", class: "me-1" %>
                    <span class="text-muted">URL</span>
                </div>
                <div class="me-4">
                    <%= image_tag "calendar.png", size: "23x23", class: "me-1" %>
                    <span class="text-muted">Join Date</span>
                </div>
                <div class="me-4">
                    <%= image_tag "location.png", size: "23x23", class: "me-1" %>
                    <span class="text-muted">Location</span>
                </div>
            </div>
            <div class="d-flex justify-content-start">
                <div class="me-4"><span class="fw-semibold">14</span> Following</div>
                <div class="me-4"><span class="fw-semibold">35</span> Followers</div>
            </div>
        </div>
    </div>
</div>

<div class="col">
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>
