<div id="messages">
    <% messages&.each do |message| %>
        <div class="d-flex <%= 'flex-row-reverse' if message.user == current_user %>">
            <div>
                <div class="<%= message.user == current_user ? 'text-bg-secondary' : 'text-bg-primary' %> badge rounded-pill py-2 px-3 my-1">
                    <%= message.body %>
                </div>
                <div class="d-flex <%= 'flex-row-reverse' if message.user == current_user %>">
                    <p style="font-size: 10px"><%= message.created_at.strftime("%b %-d, %Y %l:%M%P") %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>